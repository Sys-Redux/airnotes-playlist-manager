

generator client {
  provider = "prisma-client"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

// ==================== Core Models ====================

model User {
  id          String     @id @default(cuid())
  email       String     @unique
  name        String?
  preferences Json?      // Stores preferred genres, favorite artists, etc.
  playlists   Playlist[]
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  // Queue relations
  queueSongs       UserQueueSong[]
  queueAddedSongs  UserQueueSong[] @relation("QueueAddedBy")
  queueState       UserQueueState?
  queueHistory     UserQueueHistory[]
}

model Playlist {
  id          String         @id @default(cuid())
  name        String
  description String?
  user        User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId      String
  songs       PlaylistSong[]
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt

  // For binary tree hierarchy (self-referential)
  parent      Playlist?      @relation("PlaylistHierarchy", fields: [parentId], references: [id])
  parentId    String?
  children    Playlist[]     @relation("PlaylistHierarchy")

  @@index([userId])
}

model Song {
  id          String         @id @default(cuid())
  title       String
  artist      String
  album       String?
  genre       String?
  duration    Int            // Duration in seconds
  releaseDate DateTime?
  metadata    Json?          // Flexible field for additional data
  playlists   PlaylistSong[]
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt

  // Queue relations
  queueEntries     UserQueueSong[]
  currentInQueues  UserQueueState[]
  historyEntries   UserQueueHistory[]

  // For Dijkstra's algorithm - song connections
  connectionsFrom SongConnection[] @relation("SourceSong")
  connectionsTo   SongConnection[] @relation("TargetSong")

  @@index([title])
  @@index([artist])
  @@index([genre])
}

// ==================== Junction Tables ====================

// Many-to-many: Playlist <-> Song with ordering
model PlaylistSong {
  playlist   Playlist @relation(fields: [playlistId], references: [id], onDelete: Cascade)
  playlistId String
  song       Song     @relation(fields: [songId], references: [id], onDelete: Cascade)
  songId     String
  position   Int      // Order within playlist
  addedAt    DateTime @default(now())

  @@id([playlistId, songId])
  @@index([playlistId])
}

// ==================== Algorithm Support Models ====================

// For Dijkstra's algorithm - weighted graph edges between songs
model SongConnection {
  id           String @id @default(cuid())
  sourceSong   Song   @relation("SourceSong", fields: [sourceSongId], references: [id], onDelete: Cascade)
  sourceSongId String
  targetSong   Song   @relation("TargetSong", fields: [targetSongId], references: [id], onDelete: Cascade)
  targetSongId String
  weight       Float  // Edge weight (e.g., based on genre similarity, tempo, etc.)

  @@unique([sourceSongId, targetSongId])
  @@index([sourceSongId])
  @@index([targetSongId])
}

// ==================== State Management Models ====================
model PlaylistActionHistory {
  id             String     @id @default(cuid())
  playlistId     String
  actionType     String     // e.g., "ADD_SONG", "REMOVE_SONG", "MOVE_SONG"
  timeStamp      DateTime   @default(now())

  // Action Payload
  songId         String?
  fromPosition   Int?
  toPosition     Int?
  previousValue  String?
  newValue       String?

  // Stack state: whether this is on the undo or redo stack
  isUndone       Boolean   @default(false) // false = undo stack, true = redo stack

  // Ordering for the stack (higher = more recent)
  stackOrder     Int       @default(autoincrement())

  @@index([playlistId, isUndone])
  @@index([playlistId, stackOrder])
}

// Stores songs in a user's playback queue
model UserQueueSong {
  id        String   @id @default(cuid())
  userId    String
  songId    String
  position  Int      // Position in the queue
  addedAt   DateTime @default(now())
  addedById String?   // Who added it (for collab queues)

  // Relations
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  song      Song     @relation(fields: [songId], references: [id], onDelete: Cascade)
  addedBy   User?    @relation("QueueAddedBy", fields: [addedById], references: [id])

  @@index([userId, position])
  @@unique([userId, songId, position]) // Prevent duplicate songs at the same position
}

// Stores user's queue state (e.g., current position, shuffle, repeat)
model UserQueueState {
  id            String   @id @default(cuid())
  userId        String   @unique
  currentSongId String?
  repeatMode    String   @default("NONE") // NONE, ONE, ALL
  updatedAt     DateTime @updatedAt

  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  currentSong   Song?    @relation(fields: [currentSongId], references: [id])
}

// Stores recently played songs (history)
model UserQueueHistory {
  id        String   @id @default(cuid())
  userId    String
  songId    String
  playedAt  DateTime @default(now())

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  song      Song     @relation(fields: [songId], references: [id], onDelete: Cascade)

  @@index([userId, playedAt])
}